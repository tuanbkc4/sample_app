<% provide :title, t("users.edit.title") %>
<% provide :button_text, t("users.edit.btn_submit") %>
<h1><%= t "users.edit.subject" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.edit.avatar_change"), Settings.url.gravatar, target: "_blank" %>
    </div>
  </div>
</div>
