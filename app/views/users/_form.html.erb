<%= form_for(@user) do |f| %>
  <%= render "shared/error_messages" %>
  <%= f.label :name, t("signup.name") %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email, t("signup.email") %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :password, t("signup.password") %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t("signup.confirm_password") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.label :birthday, t("signup.birthday") %>
  <%= f.text_field :birthday, class: "form-control", type: "date" %>
  <%= f.label :gender, t("signup.gender") %>
  <%= f.select :gender, options_for_select(Settings.form.option_gender, selected:  :gender) %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
