<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("nav.logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("nav.home"), static_pages_home_url %></li>
        <li><%= link_to t("nav.help"), static_pages_help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("nav.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" >
              <%= t("nav.account") %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("nav.profile"), current_user %></li>
              <li><%= link_to t("nav.settings"), "#" %></li>
              <li class="divider"></li>
              <li> <%= link_to t("nav.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("nav.login"), login_path %></li>
        <% end %>
        <li><%= link_to t(".english"), locale: :en %></li>
        <li><%= link_to t(".vietnamese"), locale: :vi %> </li>   
      </ul>
    </nav>
  </div>
</header>
